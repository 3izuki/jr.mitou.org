---
layout: null
---

[
  {% assign projects = site.posts %}
  {% for pj in projects %}
  {
    "title"       : "{{ pj.title | escape }}",
    "description" : {{ pj.description | jsonify }},
    "icon"        : "{{ pj.thumbnail }}",
    "url"         : "{{ site.url }}{{ pj.permalink }}"
  } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
